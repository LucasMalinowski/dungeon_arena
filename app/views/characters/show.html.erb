<div class="bg-gray-600 text-white h-full" data-controller="tabs">
  <!-- Header Section -->
  <header class="p-6 bg-gray-700 flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4">
    <div>
      <h1 class="text-3xl font-bold leading-tight"><%= @character.name %></h1>
      <p class="text-sm text-gray-300"><%= @character.species %> - <%= @character.klass %> | Level 3</p>
    </div>
    <div class="flex gap-3">
      <button class="bg-green-600 hover:bg-green-700 px-4 py-2 rounded text-sm font-semibold">
        Short Rest
      </button>
      <button class="bg-yellow-600 hover:bg-yellow-700 px-4 py-2 rounded text-sm font-semibold">
        Long Rest
      </button>
    </div>
  </header>


  <!-- Main Content Section -->
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 p-6">
    <!-- Abilities Section -->
    <section class="bg-gray-700 p-6 rounded shadow">
      <h2 class="text-lg font-bold mb-4 border-b border-gray-500 pb-2">Abilities</h2>
      <div class="grid grid-cols-2 gap-4">
        <% ["strength", "dexterity", "constitution", "intelligence", "wisdom", "charisma"].each do |ability| %>
          <div class="bg-gray-800 rounded p-3 pb-1 text-center shadow hover:bg-gray-900">
            <p class="text-xs uppercase text-gray-400 font-semibold"><%= ability.capitalize %></p>
            <p class="text-xl text-green-400">+<%= modifier_for(@character, ability) %></p>
            <p class="text-lg font-bold"><%= @character.send(ability) %></p>
          </div>
        <% end %>
      </div>

      <h2 class="text-lg font-bold mt-6 mb-4 border-b border-gray-500 pb-2">Senses</h2>
      <ul class="text-sm space-y-2">
        <li><strong>Passive Perception:</strong> <%= @character.wisdom + modifier_for(@character, "wisdom") %></li>
        <li><strong>Passive Investigation:</strong> <%= @character.intelligence + modifier_for(@character, "intelligence") %></li>
        <li><strong>Passive Insight:</strong> <%= @character.wisdom + modifier_for(@character, "wisdom") %></li>
      </ul>
    </section>

    <section class="col-span-1 md:col-span-2 bg-gray-700 p-4 rounded">
      <nav class="flex flex-wrap">
        <button
          class="px-4 py-2 border-b-2 border-green-500 text-green-500"
          data-action="click->tabs#switch"
          data-tabs-target="tab"
          data-tab-name="actions"
        >
          Actions
        </button>
        <button
          class="px-4 py-2 border-b-2 border-gray-700 text-white"
          data-action="click->tabs#switch"
          data-tabs-target="tab"
          data-tab-name="spells"
        >
          Spells
        </button>
        <button
          class="px-4 py-2 border-b-2 border-gray-700 text-white"
          data-action="click->tabs#switch"
          data-tabs-target="tab"
          data-tab-name="inventory"
        >
          Inventory
        </button>
        <button
          class="px-4 py-2 border-b-2 border-gray-700 text-white"
          data-action="click->tabs#switch"
          data-tabs-target="tab"
          data-tab-name="features"
        >
          Features & Traits
        </button>
      </nav>

      <div class="mt-4">
        <div data-tabs-target="content" data-tab-name="actions">
          <h2 class="text-xl font-bold">Actions</h2>
          <ul>
            <li><strong>Quarterstaff:</strong> 1d6+2 (Versatile)</li>
            <li><strong>Unarmed Strike:</strong> 1d8+2</li>
          </ul>
        </div>

        <div class="hidden" data-tabs-target="content" data-tab-name="spells">
          <h2 class="text-xl font-bold">Spells</h2>
          <ul>
            <li><strong>Fireball:</strong> 8d6 damage</li>
            <li><strong>Cure Wounds:</strong> 1d8+3 healing</li>
          </ul>
        </div>

        <div class="hidden" data-tabs-target="content" data-tab-name="inventory">
          <h2 class="text-xl font-bold">Inventory</h2>
          <ul>
            <li><strong>Health Potion:</strong> Restores 10 HP</li>
            <li><strong>Rope:</strong> 50 ft</li>
          </ul>
        </div>

        <div class="hidden" data-tabs-target="content" data-tab-name="features">
          <h2 class="text-xl font-bold">Features & Traits</h2>
          <ul>
            <li><strong>Rage:</strong> +2 damage</li>
            <li><strong>Wild Shape:</strong> Transform into a beast</li>
          </ul>
        </div>
      </div>
    </section>
  </div>
</div>