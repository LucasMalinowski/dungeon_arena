<%= form_for @character, url: wizard_path(@step, character_id: @character.id), method: :put, class: "space-y-4 text-white" do |f| %>
  <% %w[personality ideals bonds flaws].each do |attr| %>
    <%= f.label attr, attr.capitalize, class: "block font-semibold" %>
    <%= f.text_field attr, class: "block w-full rounded bg-neutral-700 border border-gray-600 p-2" %>
  <% end %>

  <%= f.submit "Finish", name: "finish", class: "bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded" %>
<% end %>
